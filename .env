# Exemple de configuration Pronote - Ce fichier sera généré automatiquement lors de l'installation.
# NE PAS MODIFIER MANUELLEMENT, utilisez install.php pour générer ce fichier.

# Sécurité installation
ALLOWED_INSTALL_IP=

# Base de données
DB_HOST=
DB_PORT=3306
DB_NAME=
DB_USER=
DB_PASS=
DB_CHARSET=utf8mb4

# Application
APP_NAME="Pronote"
APP_ENV=production
APP_DEBUG=false
APP_URL=
APP_BASE_PATH=
BASE_URL=

# Sécurité
CSRF_LIFETIME=3600
CSRF_MAX_TOKENS=10

# Sessions
SESSION_NAME=pronote_session
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Connexion
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# Rate limiting
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_DECAY=1

# Chemins
LOGS_PATH=
UPLOADS_PATH=
TEMP_PATH=

# Mail (à configurer après installation)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="Pronote"

# Timezone
APP_TIMEZONE=Europe/Paris

# Audit
AUDIT_RETENTION_DAYS=180
AUDIT_ENABLED=true